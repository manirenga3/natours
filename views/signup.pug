extends base

block content
  main.main
    .login-form
      h2.heading-secondary.ma-bt-lg Create your free account
      form.form.form-user-signup
        .form__group
          label.form__label(for='name') Name
          input#signupName.form__input(type='text', placeholder='Name', required)
        .form__group
          label.form__label(for='email') Email address
          input#signupEmail.form__input(type='email', placeholder='you@example.com', required)
        .form__group.ma-bt-md
          label.form__label(for='password') Password
          input#signupPassword.form__input(type='password', placeholder='••••••••', required, minlength='8')
        .form__group.ma-bt-md
          label.form__label(for='Confirm password') Confirm Password
          input#signupConfirmPassword.form__input(type='password', placeholder='••••••••', required, minlength='8')
        .form__group
          button.btn.btn--green.btn--signup(disabled='true') Sign Up